<Page
    x:Class="FileHanderJson.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FileHanderJson"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel>
            <TextBox x:ConnectionId='2' Header="Name" x:Name="Name" ></TextBox>
            <TextBox x:ConnectionId='3' Header="Email" x:Name="Email" ></TextBox>
            <TextBox x:ConnectionId='4' Header="Phone" x:Name="Phone" ></TextBox>
            <TextBox x:ConnectionId='5' Header="Content" x:Name="Content" ></TextBox>
            <Button x:ConnectionId='6' x:Name="btn_save" Content="Save"                       ></Button>
            <Button x:ConnectionId='7' x:Name="btn_read" Content="Load"                        ></Button>
        </StackPanel>
    </Grid>
</Page>

