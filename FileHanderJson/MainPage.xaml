<Page
    x:Class="FileHanderJson.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FileHanderJson"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel>
            <TextBox Header="Name" x:Name="Name" ></TextBox>
            <TextBox Header="Email" x:Name="Email" ></TextBox>
            <TextBox Header="Phone" x:Name="Phone" ></TextBox>
            <TextBox Header="Content" x:Name="Content" ></TextBox>
            <Button x:Name="btn_save" Content="Save" Click="btnSave_click" ></Button>
            <Button x:Name="btn_read" Content="Load" Click="btnRead_click"  ></Button>
        </StackPanel>
    </Grid>
</Page>
